{
  "name": "parking-simulator",
  "version": "1.0.0",
  "description": "Parking Capacity & Exit Queue Simulator",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "build:frontend": "cd frontend && npm run build",
    "build:all": "npm run build && npm run build:frontend",
    "start": "node dist/index.js",
    "dev": "concurrently -n api,web -c blue,green \"npm run dev:api\" \"npm run dev:frontend\"",
    "dev:api": "tsx src/index.ts",
    "dev:frontend": "cd frontend && npm run dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:frontend": "cd frontend && npm test",
    "install:all": "npm install && cd frontend && npm install"
  },
  "keywords": [
    "parking",
    "simulation",
    "discrete-event"
  ],
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.0",
    "@vercel/node": "^5.5.16",
    "concurrently": "^8.2.2",
    "tsx": "^4.7.0",
    "typescript": "^5.3.0",
    "vitest": "^1.2.0"
  },
  "dependencies": {
    "express": "^4.18.2",
    "zod": "^3.22.4"
  }
}
